<div class="modal-content">
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Trader Profile</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div class="card-modal-container">
      <h3>Account Information</h3>
      <section class="card-modal-border">
        <div class="container-data">
          <h3>Username: </h3>
          <h5><%= @trader.username %></h5>
        </div>
        <div class="container-data">
          <h3>Fullname: </h3>
          <h5><%= @trader.full_name %></h5>
        </div>
        <div class="container-data">
          <h3>Email: </h3>
          <h5><%= @trader.email %></h5>
        </div>
        <div class="container-data">
          <h3>Account Created: </h3>
          <h5><%= @trader.created_at %></h5>
        </div>
        <div class="container-data">
          <h3>Last Updated: </h3>
          <h5><%= @trader.updated_at %></h5>
        </div>
      </section>

      <h3>Wallet</h3>
      <section class="card-modal-border">
        <div class="container-data">
          <h3>Wallet ID: </h3>
          <h5><%= @trader.wallet.id %></h5>
        </div>
        <div class="container-data">
          <h3>Balance: </h3>
          <h5><%= format_to_peso(@trader.wallet.balance) %></h5>
        </div>
      </section>

      <h3>Transaction Data</h3>
      <section class="card-modal-border">
        <div class="container-data">
          <h3>Total number of transactions: </h3>
          <h5><%= @trader.transactions_logs.count %></h5>
        </div>
        <div class="container-data">
          <h3>Stocks in Portfolio: </h3>
          <h5><%= @trader.portfolios.count %></h5>
        </div>
      </section>
    
    </div>
  </div>
  <div class="modal-footer">
    <%= link_to 'Modify User', edit_user_profile_path(id: @trader.id), {remote: true, 'data-toggle' =>  "modal", 'data-target' => '#applicationModal', class: "link-nav-btn-primary-dark-admin", id: "adminUserEdit" }  %>
  </div>
</div>
