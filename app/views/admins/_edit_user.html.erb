<div class="modal-content">
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Modify Trader</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <%= form_with scope: :user, url: user_profile_path, method: :patch  do |f| %>
      <div class="field">
        <h4>Email</h4>
        <%= f.email_field :email, autofocus: true, value: @trader.email %>
        <h4>Fullname</h4>
        <%= f.text_field :full_name, autofocus: true, value: @trader.full_name %>
        <h4>Username</h4>
        <%= f.text_field :username, autofocus: true, value: @trader.username %>
        <h4>Balance</h4>
        <%= f.number_field :balance, autofocus: true, value: @trader.wallet.balance %>
      </div>
      <div class="actions">
        <%= f.submit "Modify Account" %>
      </div>
      <div class="modal-footer">
      </div>
    <% end %>
  </div>
</div>
